{
  "name": "qmk_configurator_electron_ts",
  "version": "0.0.1",
  "description": "",
  "main": "app/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsc && electron ./app/main.js",
    "doc": "jsdoc -r ./app/ -d ./doc/",
    "postinstall": "electron-builder install-app-deps",
    "dist": "tsc --project ./tsconfig.json && electron-builder --publish onTagOrDraft"
  },
  "author": {"name":"ELliot Powell", "email": "johnp8727@gmail.com"},
  "repository": "https://github.com/e11i0t23/electron_ts",
  "license": "ISC",
  "devDependencies": {
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "jsdoc": "^3.6.2",
    "typescript": "^3.4.5"
  },
  "keywords": [
    "Electron",
    "typescript"
  ],
  "dependencies": {
    "follow-redirects": "^1.7.0",
    "temp": "^0.9.0",
    "usb": "^1.6.0"
  },
  "build": {
    "directories": {
      "output": "release"
    },
    "appId": "com.qmk.configurator",
    "mac": {
      "category": "Utilty",
      "target": ["default", "zip"]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.xz"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": ["portable","nsis","zip"]
    },
    "files": [
      "app/",
      "package.json"
    ]
  }
}
